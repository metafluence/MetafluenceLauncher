{
  "name": "metafluence-launcher",
  "productName": "Metafluence Launcher",
  "version": "1.1.2",
  "author": "Azar Aliyev",
  "description": "Launcher for Metafluence App",
  "repository": {
    "type": "git",
    "url": "https://github.com/metafluence/MetafluenceLauncher.git"
  },
  "build": {
    "appId": "Metafluence-Launcher",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./images/logo_512.ico",
      "publish": {
        "provider": "github",
        "releaseType": "release",
        "token": "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"
      }
    },
    "nsis": {
      "installerIcon": "./images/logo_512.ico",
      "uninstallerIcon": "./images/logo_512.ico",
      "uninstallDisplayName": "Metafluence Launcher Uninstaller",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./images/logo_512"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "setupExe": "MetafluenceLauncher_Setup.exe",
            "setupIcon": "./images/logo_512.ico",
            "noMsi": false
          }
        }
      ]
    }
  },
  "main": "maincopy.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build-installer": "electron-builder",
    "build": "electron-builder build --win --publish never",
    "deploy": "electron-builder build --win --publish always"
  },
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "electron-builder": "^23.6.0",
    "@electron-forge/maker-zip": "^6.0.4",
    "electron": "^22.2.0"
  },
  "dependencies": {
    "decompress-zip": "^0.3.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "save": "^2.9.0"
  }
}
